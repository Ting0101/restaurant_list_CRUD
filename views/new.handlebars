<head>
  <link rel="stylesheet" href="/stylesheets/all.css">
</head>
<div class="container">
  <div class="mt-2 rounded-pill" style="background-color: #e3e6b8">
    <h1 class="mb-1 restaurant-show-title">新增餐廳</h1>
    <form action="/restaurants" method="POST" class=" text-center">
      <div class="mb-1">
        <label for="name" class="form-label fs-5 text text-danger">餐廳名稱</label>
        <input type="text" id="name" class="col-auto  fst-italic" placeholder="* 餐廳名稱..." name="name" required
          autofocus />
      </div>
      <div class="mb-1">
        <label for="name_en" class="form-label  fs-5 text-danger">英文店名 </label>
        <input type="text" id="name_en" class="col-auto fst-italic" placeholder="  英文名稱..." name="name_en" />
      </div>
      <div class="mb-1">
        <label for="category" class="form-label fs-5 text-danger">餐廳類型</label>
        <input type="text" id="category" class="col-auto fst-italic" placeholder="* 日式餐廳..." name="category" required />
      </div>
      <div class="mb-1">
        <label for="image" class="form-label fs-5 text-danger">餐廳照片 </label>
        <input type="url" id="image" class="col-auto fst-italic" placeholder="  照片連結..." name="image" />
      </div>
      <div class="mb-1">
        <label for="location" class="form-label fs-5  text-danger">餐廳地址</label>
        <input type="text" id="location" class="col-auto fst-italic" placeholder="* 新北市永和區..." name="location"
          required />
      </div>
      <div class="mb-1">
        <label for="phone" class="form-label fs-5 text-danger">餐廳電話</label>
        <input type="tel" pattern="[0-9]{2}-[0-9]{8}" id="location" class="col-auto fst-italic"
          placeholder="* 02-22788397..." name="phone" required />
      </div>
      <div class="mb-1">
        <label for="google_map" class="form-label fs-5 text-danger">地圖連結</label>
        <input type="url" id="google_map" class="col-auto fst-italic" placeholder="  地圖連結..." name="google_map" />
      </div>
      <div class="mb-1">
        <label for="rating" class="form-label fs-5 text-danger">餐廳評價</label>
        <input type="number" step="any" min="0" id="rating" class="col-auto fst-italic" placeholder="  4.5..."
          name="rating" />
      </div>
      <div class="mb-1">
        <label for="description" class="form-label fs-5 text-danger">餐廳簡介</label>
        <input type="text" id="rdescription" class="col-auto fst-italic " placeholder="  以頂級食材進行..."
          name="description" />
      </div>
      <div>
        <button type="submit" class="btn btn-primary mb-5">Create</button>
      </div>
    </form>
  </div>
</div>